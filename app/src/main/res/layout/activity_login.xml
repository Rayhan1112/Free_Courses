<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradi"
    tools:context=".Signup">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FreeLearn"
        android:textStyle="bold"
        android:textSize="@dimen/_35ssp"
        android:letterSpacing="0.1"
        android:shadowDy="1"
        android:shadowDx="1"
        android:shadowRadius="2"
        android:shadowColor="@color/white"
        android:id="@+id/signuptext"
        android:gravity="center"
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textColor="@color/black"
        />


    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_275sdp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_gravity="center"
        app:cardElevation="@dimen/_14ssp"
        app:cardCornerRadius="@dimen/_20sdp">

        <LinearLayout
            android:layout_width="@dimen/_290sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="@dimen/_270sdp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/shape">
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold"
        android:textSize="@dimen/_25sdp"
            android:letterSpacing="0.1"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
        android:id="@+id/text1"
        android:gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColor="@color/white"/>
            </LinearLayout>





    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_gravity="center"
        app:startIconDrawable="@drawable/ic_baseline_verified_user_24">

        <EditText
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_39sdp"
            android:baselineAligned="false"
            android:hint="User Name"
            android:textColorHint="#616161"
            tools:ignore="SpeakableTextPresentCheck" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/layout2"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_marginTop="@dimen/_27sdp"
        android:layout_gravity="center"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_baseline_security_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:baselineAligned="false"
            android:hint="Password"
            android:textColorHint="#616161" />
    </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/error2"
                android:textSize="@dimen/_8sdp"
                android:textColor="#FF0000"
                android:layout_marginLeft="@dimen/_8sdp" />


    <Button
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:layout_gravity="center"
        android:id="@+id/Login"
        android:clickable="true"
        android:text="Login"
        tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textStyle="bold"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/black"
               android:gravity="center" />
            <Button
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_gravity="center"
                android:id="@+id/newacc"
                android:text="Create New Account"
                android:textColor="@color/black"
                android:backgroundTint="#a4f5cc"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>